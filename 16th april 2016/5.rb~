#!/usr/bin/ruby -w

$x=10
$y=20
if $x == $y
  print "x and y are equal\n"
else
  print "x and y are not equal\n"
end

unless $x > 200
  print "x is lesser\n"
else
  print "x is greater\n"
end

print "x is valid\n" if $x
print "y is valid\n" unless $y

#switch cases in ruby and check case for a particular no.

expr0 = 10

case expr0
when 3 && 4
  print "valid1\n"
when 10 && 100
  print "valid2\n"
else
  print "valid3\n"
end

# switch case in ruby and checking in a range
expr1 = 10

case expr1
when 1..100
  puts "valid1"
when 5..100
  puts "valid2"
else
  puts "valid3"
end
